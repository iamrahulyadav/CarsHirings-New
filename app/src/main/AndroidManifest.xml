<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carshiring">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Green">
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.mainsetup.LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.home.MainActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.home.SelectFilterActivity" />
        <activity
            android:name=".activities.mainsetup.SignUpActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.mainsetup.ForgotPasswordActivity" />
        <activity android:name=".activities.mainsetup.ChangePasswordActivity" />
        <activity android:name=".activities.home.CarsResultListActivity" />
        <activity android:name=".activities.home.LocationSelectionActivity" />
        <activity android:name=".activities.home.CarDetailActivity" />
        <activity android:name=".activities.home.ExcessProtectionActivity" />
        <activity android:name=".activities.home.FullProtectionActivity" />
        <activity android:name=".activities.home.Extras" />
        <activity android:name=".activities.home.BookCarActivity" />
        <activity android:name=".activities.home.AboutUsActivity"></activity>
    </application>

</manifest>