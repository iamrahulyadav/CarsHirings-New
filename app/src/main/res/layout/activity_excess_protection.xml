<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/ll_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtAccessProtection"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"

                        android:padding="8dp"
                        />
                </LinearLayout>
                <TextView
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy"
                    android:textSize="12sp"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp"
                    />
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_grey"/>
                <TextView
                    android:visibility="gone"
                    android:gravity="center"
                       android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy"
                    android:textSize="12sp"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
            <include layout="@layout/accordian"
                android:visibility="gone"/>
            
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/fullRadioGroup">
                <RadioButton
                    android:onClick="onRadioButtonClicked"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:id="@+id/radioFullYes"
                    android:text="@string/txtFullPro"/>
                <RadioButton
                    android:onClick="onRadioButtonClicked"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/radioFullNo"
                    android:text="@string/txtNoProtection"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/simpleRectangle"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txt_extra_pro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:drawableRight="@drawable/ic_tick"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/txtAccessProtectionTerm"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_grey"/>



                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/txt_fullprotection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="8dp"
                        android:text="@string/dummy"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >
        <include
            android:id="@+id/bottomToolBar"
            layout="@layout/bottom_toolbar"
          />
        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/bt_standardPro"
            style="@style/GreenButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="0.50"
            android:padding="10dp"
            android:text="@string/bookProtection1"
            android:textColor="@color/white"
            android:textSize="10sp" />
        <Button
            android:id="@+id/bt_fullpro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:padding="10dp"
            android:text="@string/bookProtection2"
            android:textColor="@color/white"
            style="@style/BlueButtonTheme"
            android:layout_marginLeft="3dp"
            android:textSize="10sp"
            />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
