<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.mainsetup.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/simpleRectangle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:padding="@dimen/pf_10dp_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_mail"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/email"
                    android:layout_gravity="center"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textSize="@dimen/small_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_us_phone"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textSize="@dimen/large_size" />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/simpleRectangle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_us_inter"
                    android:drawableLeft="@drawable/ic_phone"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center"
                    android:text="International Phone Number"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/large_size"
                    android:layout_margin="10dp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_us_InterphoneValue"
                    android:textColor="@color/black"
                    android:text="(+44)167823627"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textSize="@dimen/large_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/simpleRectangle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_mail"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center"
                    android:text="@string/email"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/large_size"
                    android:layout_margin="10dp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_us_email"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textSize="@dimen/large_size" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/simpleRectangle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_placeholder"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center"
                    android:text="@string/address"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/large_size"
                    android:layout_margin="10dp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_us_address"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/large_size"
                    android:paddingBottom="5dp"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
